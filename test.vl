@RUN = true

def add() {
  @A=int(input("a> "))
  @B=int(input("b> "))

  return A + B
}

while RUN {
  @text = input("cmd> ")

  if text == "exit" {
    @RUN = false
  } elif text == "help" {
    print("exit - exits the program")
    print("help - shows this menu")
  } elif text == "add" {
    print(add())
  }
}
